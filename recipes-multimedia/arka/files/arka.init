#!/bin/sh
export iptv_streamtype=0
export TSPLAYER_PIPELINE=1
export TSPLAYER_LOW_MEM=1
export TSPLAYER_SUBTILTEFLAG=2

# Starts arka service.
start() {
	printf "Starting arka service: \n"

	/usr/bin/Arka &
}

stop() {
	printf "Stopping arka service: \n"
}

case "$1" in
  start)
	start
	;;
  stop)
	stop
	;;
  *)
	echo "Usage: $0 {start|stop}"
	exit 1
esac

exit $?

